<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activitys.VerificacaoEmailActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/caixa_correio" />

    <TextView
        android:id="@+id/tvVerificacaoEnviada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verificação enviada!"
        android:textSize="24dp"
        android:textColor="@color/azul_escuro_texto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Foi enviado um código de verificação para o e-mail:"
        android:textSize="12sp"
        android:textColor="@color/cinza_escuro_escuro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVerificacaoEnviada" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C*******in@gmail.com"
        android:textSize="12sp"
        android:textColor="@color/azul_escuro_texto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textViewConfirmarCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insira abaixo o código recebido"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="@color/azul_escuro_texto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_edit_cadastro"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAllCaps="true"
        android:padding="12dp"
        android:textColor="@color/azul_escuro_texto"
        android:textColorHint="@color/cinza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewConfirmarCodigo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonVerificar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Button_pressed_verde_escuro"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="20dp"
        android:paddingTop="3dp"
        android:text="Verificar"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/editTextTextEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

</androidx.constraintlayout.widget.ConstraintLayout>