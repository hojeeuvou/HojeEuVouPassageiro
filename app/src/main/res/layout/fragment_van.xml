<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".ui.fragment.VanFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="80dp">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Minha Van"
        android:textColor="@color/texto_escuro_titulo"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextEncontrarPassageiro"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/background_edit_text"
        android:drawableLeft="@drawable/vector_busca"
        android:drawablePadding="10dp"
        android:hint="Encontre um passageiro"
        android:paddingStart="12dp"
        android:textColor="@color/texto_escuro_titulo"
        android:textColorHint="@color/cinza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerHojeEuVou"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@+id/containerHojeNaoVou"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEncontrarPassageiro">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonHojeEuVou"
            style="@style/Button_pressed"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:text="."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHojeEuVou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/background_hoje_eu_vou"
            android:elevation="10dp"
            android:padding="2dp"
            android:paddingStart="8dp"
            android:text="Hoje eu vou!"
            android:textColor="@color/verde_claro"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonHojeEuVou"
            app:layout_constraintEnd_toEndOf="@+id/buttonHojeEuVou"
            app:layout_constraintTop_toTopOf="@+id/buttonHojeEuVou" />

        <ImageView
            android:id="@+id/ivAluna"
            android:layout_width="115dp"
            android:layout_height="110dp"
            android:elevation="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imagem_aluna"
            app:layout_constraintBottom_toBottomOf="@+id/buttonHojeEuVou"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerHojeNaoVou"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/containerHojeEuVou"
        app:layout_constraintTop_toTopOf="@+id/containerHojeEuVou">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonNaoVou"
            style="@style/Button_pressed_vermelho"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:text="."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivAlunaDois"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:elevation="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imagem_aluna_dois"
            app:layout_constraintBottom_toBottomOf="@+id/buttonNaoVou"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvNaoVou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/background_hoje_eu_vou"
            android:elevation="10dp"
            android:padding="2dp"
            android:paddingStart="8dp"
            android:text="Não vou!"
            android:textColor="@color/vermelho_claro"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonNaoVou"
            app:layout_constraintEnd_toEndOf="@+id/buttonNaoVou"
            app:layout_constraintTop_toTopOf="@+id/buttonNaoVou" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerHojeSoVou"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="@+id/containerHojeEuVou"
        app:layout_constraintTop_toBottomOf="@+id/containerHojeEuVou">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonHojeSoVou"
            style="@style/Button_pressed_laranja"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="."
            android:layout_marginTop="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAlunaHojeSoVou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/background_hoje_eu_vou"
            android:elevation="10dp"
            android:padding="2dp"
            android:paddingStart="8dp"
            android:text="Hoje só vou!"
            android:textColor="@color/laranja"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonHojeSoVou"
            app:layout_constraintEnd_toEndOf="@+id/buttonHojeSoVou"
            app:layout_constraintTop_toTopOf="@+id/buttonHojeSoVou" />

        <ImageView
            android:id="@+id/ivAlunaHojeSoVou"
            android:layout_width="115dp"
            android:layout_height="110dp"
            android:elevation="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imagem_aluna"
            app:layout_constraintBottom_toBottomOf="@+id/buttonHojeSoVou"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerHojeSoVolto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/containerHojeSoVou"
        app:layout_constraintTop_toBottomOf="@+id/containerHojeEuVou">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonHojeSoVolto"
            style="@style/Button_pressed_vermelho_escuro"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="28dp"
            android:text="."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAlunaHojeSoVolto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/background_hoje_eu_vou"
            android:elevation="10dp"
            android:padding="2dp"
            android:paddingStart="8dp"
            android:text="Hoje só volto!"
            android:textColor="@color/vermelho_vinho"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonHojeSoVolto"
            app:layout_constraintEnd_toEndOf="@+id/buttonHojeSoVolto"
            app:layout_constraintTop_toTopOf="@+id/buttonHojeSoVolto" />

        <ImageView
            android:id="@+id/ivAlunaHojeSoVolto"
            android:layout_width="115dp"
            android:layout_height="110dp"
            android:elevation="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imagem_aluna"
            app:layout_constraintBottom_toBottomOf="@+id/buttonHojeSoVolto"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/ivFundoPassageiro"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/laranja"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitulo" />

    <TextView
        android:id="@+id/tvIniciais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VP"
        android:elevation="10dp"
        android:textSize="30sp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/ivFundoPassageiro"
        app:layout_constraintEnd_toEndOf="@+id/ivFundoPassageiro"
        app:layout_constraintStart_toStartOf="@+id/ivFundoPassageiro"
        app:layout_constraintTop_toTopOf="@+id/ivFundoPassageiro" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Seus colegas de van:"
        android:textColor="@color/texto_escuro"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerHojeSoVou" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPassageiros"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
